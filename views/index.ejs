<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trash Reporter</title>
    <link rel="stylesheet" href="../styles/index.css">
</head>
<body>
    <header class="header">
        <div class="logo">GreenLenz</div>
        <nav class="nav">
            <a href="/admin" class="admin-btn">Admin</a>
        </nav>
    </header>

    <main class="container">
        <div id="postSection" class="posts-container"></div>
    </main>
    
    <!-- Modal for taking photo -->
    <div id="photoModal" class="modal">
        <div class="modal-content">
            <button id="closeModal" class="close">Ã—</button>
            <input type="file" id="photoInput" accept="image/*" capture="camera" />
            <textarea id="photoDescription" placeholder="Add a description..."></textarea>
            <button id="uploadBtn">Upload Photo</button>
        </div>
    </div>

    <script>
        document.getElementById('addPhoto').addEventListener('click', function () {
            document.getElementById('photoModal').style.display = 'block';
        });

        document.getElementById('closeModal').addEventListener('click', function () {
            document.getElementById('photoModal').style.display = 'none';
        });

        document.getElementById('uploadBtn').addEventListener('click', function () {
            const photoInput = document.getElementById('photoInput');
            const description = document.getElementById('photoDescription').value;
            const photo = photoInput.files[0];

            if (!photo) {
                alert('Please select an image');
                return;
            }

            // Prepare form data
            const formData = new FormData();
            formData.append('photo', photo);
            formData.append('description', description);

            // Send to backend using fetch
            fetch('/api/upload', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    alert('Image uploaded successfully');
                    // Optionally, display the image or reload the posts section
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error uploading image:', error);
                alert('Upload failed');
            });
        });
    </script>

</body>
</html>
