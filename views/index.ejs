<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trash Reporter</title>
    <link rel="stylesheet" href="styles/index.css">
</head>
<body>
    <header class="header">
        <div class="logo">GreenLenz</div>
        <nav class="nav">
            <a href="/admin" class="admin-btn">Admin</a>
            <!-- <a href="/signin">Sign In</a>
            <a href="/signup">Sign Up</a> -->
        </nav>
    </header>

    <main class="container">
        <div id="postSection" class="posts-container"></div>
    </main>

    <footer>
        <div class="add-photo" id="addPhoto">
            <span class="plus-icon">+</span>
        </div>
    </footer>

    <!-- Modal for taking photo -->
    <div id="photoModal" class="modal">
        <div class="modal-content">
            <button id="closeModal" class="close">Ã—</button>
            <input type="file" id="photoInput" accept="image/*" capture="camera" />
            <textarea id="photoDescription" placeholder="Add a description..."></textarea>
            <button id="uploadBtn">Upload Photo</button>
        </div>
    </div>

    <script src="scripts/photos.js" defer></script>
</body>
</html>
